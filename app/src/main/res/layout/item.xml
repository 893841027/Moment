<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:clickable="true"
        android:layout_marginBottom="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#adf"
        android:layout_width="280dp"
        android:layout_gravity="left"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    app:riv_corner_radius="1000dp"
                    android:layout_width="34dp"
                    android:src="@mipmap/bo"
                    android:layout_height="34dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textColor="#233"
                    android:singleLine="true"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="title"/>

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="date"/>


            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#000"
                android:layout_height="1dp" />


            <TextView
                android:layout_marginTop="5dp"
                android:maxHeight="600dp"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="content"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:clickable="true"
        android:layout_gravity="right"
        android:layout_marginBottom="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#fad"
        android:layout_width="280dp"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    app:riv_corner_radius="1000dp"
                    android:layout_width="34dp"
                    android:src="@mipmap/nv"
                    android:layout_height="34dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:textColor="#233"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="title"/>

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="date"/>


            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="#000"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:maxHeight="600dp"
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="content"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/card3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#40000000"
            android:minHeight="30dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:text="更新内容"
                android:textColor="#fff"
                android:textSize="12sp"
                android:gravity="center"
                android:minHeight="30dp"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/date3"
            android:layout_width="match_parent"
            android:text="更新时间 22:34"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="100dp" />




</LinearLayout>
